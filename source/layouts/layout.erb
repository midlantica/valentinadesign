<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Valentina Art - Inspired and Inspirational" %></title>

    <%= stylesheet_link_tag "styles" %>
    <%= stylesheet_link_tag "fonts" %>
    <%= stylesheet_link_tag "lightbox" %>

    <%# javascript_include_tag "all" %>
    <%= javascript_include_tag "vendor/jquery-1.8.0.min.js" %>
    <%= javascript_include_tag "vendor/lightbox.js" %>
    <link rel="shortcut icon" href="img/favicons/favicon.ico">
    <link rel="shortcut icon" href="img/favicons/apple-touch-icon.png">
    <link rel="shortcut icon" href="img/favicons/apple-touch-icon-precomposed.png">
    <link rel="shortcut icon" href="img/favicons/apple-touch-icon-144x144-precomposed.png" sizes="144x144">
    <link rel="shortcut icon" href="img/favicons/apple-touch-icon-114x114-precomposed.png" sizes="114x114">
    <link rel="shortcut icon" href="img/favicons/apple-touch-icon-72x72-precomposed.png" sizes="72x72">
    <link rel="shortcut icon" href="apple-touch-icon-57x57-precomposed.png" sizes="57x57">
  </head>

  <body id="<%= page_classes %>">

    <div id ="wrapper">

      <%= partial "partials/header" %>

      <div id ="innerwrapper">
        <%= partial "partials/navigation" %>
        <%= yield %>
      </div><!-- <<< innerwrapper -->

      <%= partial "partials/footer" %>

    </div><!-- <<< wrapper -->

    <!-- popOver -->
    <%= javascript_include_tag "popOver.js" %>

    <div id="popOverImg" class="show">
      <a href="https://www.kickstarter.com/projects/778745924/feeling-inspired-app" target="_blank"><img src="img/app_popOver.png" width="600" height="401"></a>
      <div id="remove">X</div>
    </div>


  </body>
</html>