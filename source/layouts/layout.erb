<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Valentina Art - Inspired and Inspirational" %></title>

    <%= stylesheet_link_tag "styles" %>
    <%= stylesheet_link_tag "fonts" %>
    <%= stylesheet_link_tag "lightbox" %>

    <%# javascript_include_tag "all" %>
    <%= javascript_include_tag "vendor/jquery-1.8.0.min.js" %>
    <%= javascript_include_tag "vendor/lightbox.js" %>

    <%= partial "partials/favicons" %>

  </head>

  <body id="<%= page_classes %>">

    <div id ="wrapper">

      <%= partial "partials/header" %>

      <div id ="innerwrapper">
        <%= partial "partials/navigation" %>
        <%= yield %>
      </div>

      <%= partial "partials/footer" %>

    </div>

    <!-- popOver -->
    <%= javascript_include_tag "popOver.js" %>

    <div id="popOverImg" class="hide">
      <a href="https://www.kickstarter.com/projects/778745924/feeling-inspired-app" target="_blank"><img src="img/app_popOver2.jpg" width="500" height="400"></a>
      <div id="remove">X</div>
    </div>


  </body>
</html>