
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Valentina Art - Inspired and Inspirational" %></title>


    <%= stylesheet_link_tag "fonts.css" %>
    <%= stylesheet_link_tag "styles.css" %>
    <%= stylesheet_link_tag "lightbox.css" %>

    <%# javascript_include_tag "all" %>
    <%# javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.js" %>
    <%= javascript_include_tag "vendor/jquery-1.8.0.min.js" %>
    <%= javascript_include_tag "vendor/lightbox.js" %>

    <%# javascript_include_tag "vendor/raphael-min.js" %>
    <%# javascript_include_tag "vendor/flower.js" %>
    <%# javascript_include_tag "vendor/jquery.lazylinepainter-1.4.js" %>

    <%# javascript_include_tag "vendor/flower_ani.js" %>

  </head>
  <body id="<%= page_classes %>">

    <div id ="wrapper">
      <%= partial "header" %>
      <div id ="innerwrapper">

        <%= partial "navigation" %>
            <%= yield %>

      </div><!-- <<< innerwrapper -->
      <%= partial "footer" %>
    </div><!-- <<< wrapper -->

    <script>
    $( document ).ready(function() {
      $('.trigger').click(function() {
         $('.modal-wrapper').toggleClass('');
        $('.page-wrapper').toggleClass('blur');
         return false;
      });
    });
    </script>

  </body>
</html>